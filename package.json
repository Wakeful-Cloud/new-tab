{
  "name": "new-tab",
  "version": "1.0.2",
  "description": "New tab extension",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "vite build",
    "clean": "rm dist -r",
    "dev": "vite",
    "lint": "eslint .",
    "pack:chrome": "crx3 pack dist --pem new-tab.crx.pem --outfile new-tab.crx",
    "pack:firefox": "web-ext sign --source-dir dist --channel unlisted && cp web-ext-artifacts/*.xpi new-tab.xpi",
    "preview": "vite preview"
  },
  "dependencies": {
    "@types/chrome": "^0.0.244",
    "@types/lodash-es": "^4.17.8",
    "@types/node": "^20.5.6",
    "@unocss/preset-wind": "^0.55.3",
    "@unocss/transformer-directives": "^0.55.4",
    "idb-keyval": "^6.2.1",
    "lodash-es": "^4.17.21",
    "phosphor-solid": "^1.1.5",
    "solid-devtools": "^0.27.7",
    "solid-js": "^1.7.11",
    "typescript": "^5.2.2",
    "unocss": "^0.55.3",
    "unsplash-js": "^7.0.18",
    "vite": "^4.4.9",
    "vite-plugin-solid": "^2.7.0",
    "vite-tsconfig-paths": "^4.2.0",
    "web-ext": "^7.6.2"
  },
  "devDependencies": {
    "@limegrass/eslint-plugin-import-alias": "^1.0.6",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-security-node": "^1.1.1",
    "eslint-plugin-solid": "^0.13.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Wakeful-Cloud/new-tab.git"
  },
  "author": "Wakeful-Cloud",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Wakeful-Cloud/new-tab/issues"
  },
  "homepage": "https://github.com/Wakeful-Cloud/new-tab#readme"
}
